--TEST--
"filter" filter
--TEMPLATE--
{% for n in data|filter(=> _ is even) %}
 * {{ n }}
{% else %}
 * NOTHING
{% endfor %}
--DATA--
return [ 'data' => [ 1, 2, 3, 4, 5, 6 ] ];
--EXPECT--
 * 2
 * 4
 * 6
--DATA--
return [ 'data' => [ 1, 2, 3, 4, 5, 6 ] ];
--EXPECT--
 * 2
 * 4
 * 6
--DATA--
return [ 'data' => [ 1, 1, 3, 21 ] ];
--EXPECT--
 * NOTHING
--DATA--
return [ 'data' => [ 'a' => 2, 'b' => 2, 'c' => 2 ] ];
--EXPECT--
 * 2
 * 2
 * 2